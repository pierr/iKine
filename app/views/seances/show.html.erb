<h1>Seance numero <%= "#{@seance.id}"%></h1>

<div class="view_form">
	<div class="actions button-container centrage">
		<div class="button-group right">
			<%= positive_add_button_link_to "Rendez vous",{ :controller => "rdvs", :action => "new", :patient_id=> @seance.ordonnance.patient.id }  %>
		</div>		
	</div>

		</br>
		<div class="field">
    		<strong>Praticien</strong><br />
    		<%=  @seance.user.prenom %>
    		<%=  @seance.user.nom %>
  		</div>
 		<div class="field">
			<strong>Patient</strong><br />
			<%=  @seance.ordonnance.patient.prenom %>
    		<%=  @seance.ordonnance.patient.nom %>
  		</div>
  		<div class="field">
			<strong>Date debut</strong><br />
    		<%=  @seance.date_debut.strftime("%d/%m/%Y") %>
  		</div>
  		<div class="field">
			<strong>Commentaires</strong><br />
    		<%=  @seance.commentaire %>
	  	</div>
  		<div class="field">
			<strong>Ordonnance</strong><br />
    		<%= "numero #{@seance.ordonnance.numero} du  #{@seance.ordonnance.date.strftime("%d/%m/%Y")}" %>
	  	</div>
  		<div class="field">
			<strong>Effectuee a domicile</strong><br />
    		<%=  @seance.a_domicile %>
	  	</div>
  		<div class="field">
			<strong>Seance payee</strong><br />
    		<%=  @seance.paye %>
	  	</div>

<div class="actions button-container">
	
	<div class= "button-group">
		<%= button_link_to "Toutes les Seances", seances_path%>
	</div>
	<div class= "button-group right">
		<%= edit_button_link_to "Modifier", edit_seance_path(@seance) %>
		<%= negative_trash_button_link_to "Supprimer", @seance, :method => :delete,
	 									  						:confirm => "Etes vous certain?",
	                          	  	      						:title => "Supprimer la seance #{@seance.id}"
	%>
	</div>
</div>
</div>