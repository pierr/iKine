<!DOCTYPE html> 
<html> 
	<head>
    <title><%= h(yield(:title) || "Untitled") %></title>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag "jquery.js","/jquery.mobile-1.0a4.1/jquery.mobile-1.0a4.1.js", "mobile" %>
    <%= yield(:head) %>
  </head>
  <body>
	<div data-role="page" data-fullscreen="true">
		<%= link_to "Site complet", root_url(:mobile => 0), :class => "button", :rel => "external" %>
		 <%= render 'layouts/header' %><!-- /header -->
		 <% unless flash.empty? %>
	        <div class="info">
	        <%- flash.each do |name, msg| -%>
	          <%= content_tag :div, msg, :id => "flash_#{name}" %>
	        <%- end -%>
	        </div>
	      <% end %>

	      <%= yield %>
		
		 <%= render 'layouts/footer' %><!-- /footer -->
	</div><!-- /page -->

	</body>
</html>   


  	